<template name="index$587f5716">
  <view class="_div data-v-e6813712 post-wrapper">
    <view class="_div data-v-e6813712 post-box">
      <view class="_h2 data-v-e6813712">打卡项目名称</view>
      <input type="text" placeholder="例：考研打卡群（必填）" focus="true" maxlength="50" value="{{title}}" bindinput="handleProxy" data-eventid="{{'0'}}" data-comkey="{{$k}}" class="_input data-v-e6813712" />
      <view class="_div data-v-e6813712 post-img-wrapper">
        <image src="{{postImg}}" mode="aspectFill" class="_img data-v-e6813712 {{[isSelectImg ? 'selected' : '']}}"></image>
        <view class="_div data-v-e6813712 post-input" bindtap="handleProxy" data-eventid="{{'1'}}" data-comkey="{{$k}}">
          <label class="_span data-v-e6813712">本地上传图片</label>
        </view>
      </view>
    </view>
    <view class="_div data-v-e6813712 post-box">
      <view class="_h2 data-v-e6813712">打卡详细描述</view>
      <textarea value="{{detail}}" bindinput="handleProxy" auto-height maxlength="300" show-confirm-bar="{{false}}" placeholder="请输入详细描述（选填）" data-eventid="{{'2'}}" data-comkey="{{$k}}" class="_textarea data-v-e6813712" />
    </view>
    <view class="_div data-v-e6813712 post-box">
      <view class="_h2 data-v-e6813712">设置开始结束日期</view>
      <label bindtap="handleProxy" data-eventid="{{'3'}}" data-comkey="{{$k}}" class="_label data-v-e6813712">
        <view class="_i data-v-e6813712 radio-btn {{[dateType === 1 ? 'selected' : '']}}"></view> 长期打卡 </label>
      <label bindtap="handleProxy" data-eventid="{{'4'}}" data-comkey="{{$k}}" class="_label data-v-e6813712">
        <view class="_i data-v-e6813712 radio-btn {{[dateType === 2 ? 'selected' : '']}}"></view> 设置打卡时间段 </label>
      <view class="_div data-v-e6813712 post-date-box" wx:if="{{isPostDateBoxShow}}">
        <view class="_div data-v-e6813712 post-date-item">
          <picker mode="date" value="{{startDate}}" bindchange="handleProxy" data-eventid="{{'5'}}" data-comkey="{{$k}}" class="_picker data-v-e6813712">
            <view class="_p data-v-e6813712 {{[startDate ? 'actived' : '']}}">{{startDate || '开始日期'}}</view>
          </picker>
        </view>
        <view class="_div data-v-e6813712 post-date-item">
          <picker mode="date" start="{{startDate}}" value="{{endDate}}" bindchange="handleProxy" data-eventid="{{'6'}}" data-comkey="{{$k}}" class="_picker data-v-e6813712">
            <view class="_p data-v-e6813712 {{[endDate ? 'actived' : '']}}">{{endDate || '结束日期'}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view class="_div data-v-e6813712 btn generation-plan {{[!isDisabled ? 'disabled' : '']}}" bindtap="handleProxy" wx:if="{{! generating}}" data-eventid="{{'7'}}" data-comkey="{{$k}}">生成计划</view>
    <view class="_div data-v-e6813712 btn generation-plan disabled" wx:else>生成中...</view>
  </view>
</template>