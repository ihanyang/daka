@import "/static/css/vendor.wxss";

.post-wrapper {
  min-height: 100vh;
  padding: 50rpx 30rpx 120rpx;
  box-sizing: border-box;
  background-color: #FAFAFA;
}
.post-box {
  margin-bottom: 60rpx;
}
.post-box ._h2 {
  margin-bottom: 40rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}
.post-box ._input[type="text"] {
  height: 100rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  background-color: #FFF;
}
.post-box .input-placeholder {
  color: #DBDBDB;
}
.post-box ._textarea {
  padding: 30rpx;
  font-size: 30rpx;
  line-height: 1.5;
  border-radius: 10rpx;
  background-color: #FFF;
  word-wrap: break-word;
}
.post-box ._label {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 30rpx;
}
.post-box ._label:last-of-type {
  margin: 40rpx 0;
}
.post-box:nth-last-child(2) {
  margin-bottom: 0;
}
.radio-btn {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  color: #C8C8C8;
  border: 2rpx solid currentcolor;
}
.radio-btn.selected {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #22CDCB;
}
.radio-btn.selected::after {
  content: "";
  width: 60%;
  height: 60%;
  border-radius: 50%;
  background-color: currentcolor;
}
.post-img-wrapper {
  display: flex;
  margin-top: 40rpx;
}
.post-img-wrapper ._img {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  position: relative;
}
.post-img-wrapper ._img::before {
  content: "\9ED8\8BA4\56FE\7247";
  padding: 0 20rpx;
  position: absolute;
  top: -20rpx;
  left: -40rpx;
  color: #FFF;
  font-size: 22rpx;
  background-color: #22CDCB;
  transform: rotate(-45deg);
  transform-origin: right center;
}
.post-img-wrapper .selected::before {
  display: none;
}
.post-input {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 180rpx;
  color: #ABABAB;
  font-size: 24rpx;
  border-radius: 10rpx;
  background-color: #F2F2F2;
}
.post-input ._span {
  display: block;
  padding-top: 60rpx;
  background: url(data:image/png;base64,) center top no-repeat;
  background-size: 50rpx 40rpx;
}
.post-date-box {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.post-date-box ._div {
  width: 300rpx;
  padding-left: 30rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #FFF url(data:image/png;base64,) 30rpx center no-repeat;
  background-size: 30rpx;
}
.post-date-box ._p {
  color: #DBDBDB;
}
.post-date-box .actived {
  color: #333;
}
.generation-plan {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  color: #22CDCB;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 120rpx;
  box-shadow: 0 0 30rpx rgba(46, 217, 208, .2);
  background-color: #FFF;
}